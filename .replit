modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "uvicorn backend.app:app --host 0.0.0.0 --port 8080"]
deploymentTarget = "gce"
publicDir = "frontend"

[unitTest]
language = "python3"

[debugger]
support = true

[[ports]]
localPort = 8080
externalPort = 80
exposeLocalhost = true

[languages]
[languages.python3]
pattern = "**/*.py"

[languages.python3.languageServer]
start = "pylsp"