# Railway Environment Configuration for LOGODETH
# These variables will be set in Railway dashboard

# Core Configuration
LOGODETH_ENVIRONMENT=production
LOGODETH_DEBUG=false

# OpenRouter Integration (Cost-Effective)
LOGODETH_USE_OPENROUTER=true
LOGODETH_OPENAI_API_KEY=${{OPENROUTER_API_KEY}}
LOGODETH_OPENAI_MODEL=google/gemini-pro-vision

# OpenRouter Optional Headers
LOGODETH_OPENROUTER_SITE_URL=https://github.com/4ier/LOGODETH
LOGODETH_OPENROUTER_APP_NAME=LOGODETH

# Railway Redis (Automatically configured)
LOGODETH_REDIS_URL=${{REDIS_URL}}

# API Configuration
LOGODETH_HOST=0.0.0.0
LOGODETH_PORT=${{PORT}}
LOGODETH_API_RATE_LIMIT=30
LOGODETH_MAX_FILE_SIZE=10485760

# Caching Configuration (48 hours for cost efficiency)
LOGODETH_CACHE_TTL=172800
LOGODETH_CACHE_MAX_KEYS=10000

# AI Configuration (Optimized for cost)
LOGODETH_MAX_TOKENS=300
LOGODETH_TEMPERATURE=0.1
LOGODETH_AI_TIMEOUT=60

# Logging
LOGODETH_LOG_LEVEL=INFO
LOGODETH_LOG_FORMAT=json

# CORS (Railway automatically provides the domain)
LOGODETH_CORS_ORIGINS=https://${{RAILWAY_PUBLIC_DOMAIN}}

# Performance (Optimized for Railway)
LOGODETH_WORKER_COUNT=2
LOGODETH_WORKER_TIMEOUT=300

# Security
LOGODETH_SECRET_KEY=${{SECRET_KEY}}